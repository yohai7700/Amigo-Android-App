<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/light_overlay">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_toStartOf="@+id/rating_number"
            android:layout_toLeftOf="@+id/rating_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:text="Player Name"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/rating_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/games_number"
            android:layout_toStartOf="@id/games_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:text="0"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/games_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/wins_number"
            android:layout_toStartOf="@id/wins_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/wins_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/losses_number"
            android:layout_toStartOf="@id/losses_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/losses_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/goals_number"
            android:layout_toStartOf="@id/goals_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/goals_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/assists_number"
            android:layout_toStartOf="@id/assists_number"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/assists_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:paddingRight="50dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="22sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>